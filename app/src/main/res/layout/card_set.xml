<!-- card_set_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Card Set Title -->
    <TextView
        android:id="@+id/text_card_set_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Biology Review"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" /> <!-- Set the title here -->

    <!-- Amount of Questions -->
    <TextView
        android:id="@+id/text_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@android:color/darker_gray" /> <!-- Set the question count here -->

</LinearLayout>
